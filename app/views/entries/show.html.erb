<% content_for :title, "Showing entry" %>

<div class="w-full">
  <% if notice.present? %>
    <p class="py-2 px-3 bg-green-50 dark:bg-green-900 mb-5 text-green-500 dark:text-green-300 font-medium rounded-md inline-block" id="notice"><%= notice %></p>
  <% end %>

  <div class="flex justify-between items-center mb-6">
    <h1 class="font-bold text-4xl">
      <%= @entry.country.flag %> <%= @entry.country.name %> <%= @entry.contest.year %>
    </h1>

    <div class="flex gap-2">
      <%= icon_button "Edit", "pencil-simple", edit_entry_path(@entry), secondary_button_class %>
      <%= icon_button "Back", "arrow-left", entries_path, secondary_button_class %>
    </div>
  </div>

  <div class="bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6">
    <dl class="divide-y divide-gray-200 dark:divide-gray-700">
      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Artist</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0">
          <%= @entry.artist_name.presence || content_tag(:span, "-", class: "text-gray-400 dark:text-gray-500") %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Song</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0">
          <%= @entry.song_title.presence || content_tag(:span, "-", class: "text-gray-400 dark:text-gray-500") %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Original Lyrics</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0 whitespace-pre-wrap">
          <%= @entry.lyrics.presence || content_tag(:span, "-", class: "text-gray-400 dark:text-gray-500") %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">English Lyrics</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0 whitespace-pre-wrap">
          <%= @entry.en_lyrics.presence || content_tag(:span, "-", class: "text-gray-400 dark:text-gray-500") %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Semi-Final</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0">
          <% if @entry.semifinal.present? && @entry.semifinal_order.present? %>
            Semi-Final <%= @entry.semifinal %>, Position <%= @entry.semifinal_order %>
          <% else %>
            <span class="text-gray-400 dark:text-gray-500">-</span>
          <% end %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Final</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0">
          <% if @entry.final_order.present? %>
            Position <%= @entry.final_order %>
          <% else %>
            <span class="text-gray-400 dark:text-gray-500">-</span>
          <% end %>
        </dd>
      </div>

      <div class="py-4 sm:grid sm:grid-cols-3 sm:gap-4">
        <dt class="text-sm font-medium text-gray-500 dark:text-gray-400">Qualified</dt>
        <dd class="mt-1 text-sm text-gray-900 dark:text-gray-100 sm:col-span-2 sm:mt-0">
          <% if @entry.qualified.nil? %>
            <span class="text-gray-400 dark:text-gray-500">-</span>
          <% else %>
            <%= @entry.qualified ? '✅ Yes' : '❌ No' %>
          <% end %>
        </dd>
      </div>
    </dl>
  </div>
</div>
