<tr id="<%= dom_id entry %>" class="hover:bg-gray-50">
  <td class="px-6 py-4 whitespace-nowrap"><%= entry.contest.year %></td>
  <td class="px-6 py-4 whitespace-nowrap">
    <div class="flex items-center gap-2">
      <span><%= entry.country.flag %></span>
      <span><%= entry.country.name %></span>
    </div>
  </td>
  <td class="px-6 py-4"><%= entry.artist_name %></td>
  <td class="px-6 py-4"><%= entry.song_title %></td>
  <td class="px-6 py-4 whitespace-nowrap text-center"><%= entry.semifinal %></td>
  <td class="px-6 py-4 whitespace-nowrap text-center"><%= entry.semifinal_order %></td>
  <td class="px-6 py-4 whitespace-nowrap text-center"><%= entry.final_order %></td>
  <td class="px-6 py-4 whitespace-nowrap text-center">
    <% if entry.qualified.nil? %>
      <span class="text-gray-400">-</span>
    <% else %>
      <%= entry.qualified ? '✅' : '❌' %>
    <% end %>
  </td>
  <td class="px-6 py-4 whitespace-nowrap text-right text-sm font-medium space-x-2">
    <%= link_to entry_path(entry), class: "text-blue-600 hover:text-blue-900" do %>
      <%= phosphor_icon "eye", class: "h-5 w-5 inline" %>
    <% end %>
    <%= link_to edit_entry_path(entry), class: "text-blue-600 hover:text-blue-900" do %>
      <%= phosphor_icon "pencil-simple", class: "h-5 w-5 inline" %>
    <% end %>
    <%= link_to entry_path(entry),
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" },
          class: "text-red-600 hover:text-red-900" do %>
      <%= phosphor_icon "trash", class: "h-5 w-5 inline" %>
    <% end %>
  </td>
</tr>
